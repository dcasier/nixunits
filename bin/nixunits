#!/bin/bash
set -e

. _NIXUNITS_PATH_SED_/bin/common.sh

usage() {
  echo "Usage : nixunits action [options]"
  echo
  echo "Available actions:"
  echo "  build"
  echo "  delete"
  echo "  disable"
  echo "  enable"
  echo "  ip6_get <container name>"
  echo "  list"
  echo "  nsenter|shell"
  echo "  start"
  echo "  restart|reboot"
  echo "  status"
  echo "  * : wrapper => machinectl \$@"
  echo "  h, help"
  echo "  <action> h, help"
  echo

  test -n "$1" && exit "$1"
  exit 0
}

ACTION="$1"
test -z "$ACTION" && machinectl && exit 0
test "$ACTION" = "-h" && usage 0
test "$ACTION" = "--help" && usage 0
shift

case "$ACTION" in
  build)
    _NIXUNITS_PATH_SED_/bin/build.sh "$@";;
  delete)
    _NIXUNITS_PATH_SED_/bin/delete.sh "$@";;
  disable)
    _NIXUNITS_PATH_SED_/bin/disable.sh "$@";;
  enable)
    _NIXUNITS_PATH_SED_/bin/enable.sh "$@";;
  ip6_get)
    ip6_crc32 "$1";;
  list)
    echo "Exists : "
    ls -1 /var/lib/nixunits/containers
    echo
    echo "=> machinectl list"
    machinectl list
    ;;
  nsenter|shell)
    _NIXUNITS_PATH_SED_/bin/nsenter.sh "$@";;
  restart|reboot)
    if shell_exist "$1"; then
      echo "ERROR: nsenter|shell exist"
      exit 1
    fi
    systemctl restart "nixunits@$1";;
  start)
    systemctl start "nixunits@$1";;
  status)
    _NIXUNITS_PATH_SED_/bin/status.sh "$@";;
  h|help)
    usage 0;;
  *)
    echo "=> machinectl $ACTION $*"
    # shellcheck disable=SC2068
    machinectl "$ACTION" $@;;
esac
